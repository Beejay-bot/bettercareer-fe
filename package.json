{
  "name": "bettercareer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && prettier --check */**/*.{ts,tsx,css} --config ./.prettierrc",
    "format": "prettier --write */**/*.{ts,tsx,css} --config ./.prettierrc"
  },
  "dependencies": {
    "@radix-ui/themes": "^2.0.3",
    "next": "14.1.0",
    "react": "^18",
    "react-dom": "^18",
    "zustand": "^4.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{scss}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "sass": "^1.71.1",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
